                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="🗕" Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="12" Margin="2,0" Click="MinimizeButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="MaximizeRestoreButton" Content="🗖" Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="12" Margin="2,0" Click="MaximizeRestoreButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="✕" Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="12" Margin="2,0" Click="CloseButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#ff4757"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Modern Navigation Sidebar -->
                <Border Grid.Column="0" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="20,30,20,20">

                            <!-- Navigation Header -->
                            <TextBlock Text="ĐIỀU HƯỚNG" FontSize="12" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,15"/>

                            <!-- Dashboard -->
                            <Button Command="{Binding NavigateToDashboardCommand}" Style="{StaticResource ModernNavButtonStyle}" Click="Button_Click" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#3B82F6" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock Text="📊" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Bảng Điều Khiển" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </StackPanel>
                            </Button>

                            <!-- Users Management -->
                            <Button Command="{Binding OpenMemberListCommand}" Style="{StaticResource ModernNavButtonStyle}" Margin="0,0,0,8"
                                    Visibility="{Binding CanAccessAdminFeatures, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#10B981" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock Text="👥" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Người Dùng" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </StackPanel>
                            </Button>

                            <!-- Clubs Management -->
                            <Button Command="{Binding OpenClubManagementCommand}" Style="{StaticResource ModernNavButtonStyle}" Margin="0,0,0,8"
                                    Visibility="{Binding CanAccessClubManagement, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#8B5CF6" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock Text="🏛️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Câu Lạc Bộ" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </StackPanel>
                            </Button>

                            <!-- Events Management -->
                            <Button Command="{Binding OpenEventManagementCommand}" Style="{StaticResource ModernNavButtonStyle}" Margin="0,0,0,8"
                                    Visibility="{Binding CanAccessEventManagement, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#F59E0B" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock Text="📅" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Sự Kiện" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </StackPanel>
                            </Button>

                            <!-- Reports -->
                            <Button Command="{Binding OpenReportsCommand}" Style="{StaticResource ModernNavButtonStyle}" Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#EF4444" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock Text="📈" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Báo Cáo" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </StackPanel>
                            </Button>

                            <!-- Divider -->
                            <Border Height="1" Background="#E2E8F0" Margin="0,10,0,20"/>

                            <!-- Quick Actions Header -->
                            <TextBlock Text="THAO TÁC NHANH" FontSize="12" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,15"/>

                            <!-- Refresh Data -->
                            <Button Command="{Binding RefreshDataCommand}" Style="{StaticResource ModernNavButtonStyle}" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#6B7280" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock Text="🔄" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Làm Mới Dữ Liệu" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </StackPanel>
                            </Button>

                            <!-- Logout Button -->
                            <Button Command="{Binding LogoutCommand}" Style="{StaticResource ModernNavButtonStyle}" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#DC2626" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock Text="🚪" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Đăng Xuất" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Modern Content Area -->
                <Grid Grid.Column="1" Background="#FAFBFC">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modern Notifications Panel -->
                    <Border Grid.Row="0" CornerRadius="12" Margin="30,30,30,15" Padding="20"
                            Visibility="{Binding HasNotifications, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FEF3C7" Offset="0"/>
                                <GradientStop Color="#FDE68A" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#F59E0B" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="#F59E0B" CornerRadius="20" Width="32" Height="32" Margin="0,0,15,0">
                                <TextBlock Text="🔔" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Column="1" Text="{Binding NotificationMessage}" FontSize="14" FontWeight="Medium"
                                       Foreground="Black" VerticalAlignment="Center"/>
                            <Button Grid.Column="2" Content="✕" Background="#F59E0B" Foreground="White" BorderThickness="0" 
                                    FontWeight="Bold" Padding="8" Width="32" Height="32"
                                    Command="{Binding DismissNotificationCommand}"/>
                        </Grid>
                    </Border>

                    <!-- Modern Main Content -->
                    <Border Grid.Row="1" Background="White" Margin="30,15,30,30" CornerRadius="16" 
                            BorderBrush="#E2E8F0" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.08" BlurRadius="16"/>
                        </Border.Effect>

                        <ContentControl Content="{Binding CurrentView}" 
                                        ContentTemplateSelector="{StaticResource ViewTemplateSelector}"
                                        Margin="0"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
