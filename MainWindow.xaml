<Window x:Class="ClubManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagementApp"
        xmlns:converters="clr-namespace:ClubManagementApp.Converters"
        xmlns:vm="clr-namespace:ClubManagementApp.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Ứng Dụng Quản Lý Câu Lạc Bộ" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="CanResize"
        MinWidth="1200"
        MinHeight="800">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ecf0f1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="Center" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3e50"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                <Setter Property="Background" Value="#3498db"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Navigation Button Style -->
        <Style x:Key="ModernNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8" Margin="8,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="Center" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                <Setter Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Dashboard Template -->
        <DataTemplate x:Key="DashboardTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modern Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Bảng Điều Khiển" FontSize="32" FontWeight="Bold" 
                                   Foreground="Black" Margin="0,0,0,5"/>
                            <TextBlock Text="Chào mừng trở lại! Đây là những gì đang diễn ra với các câu lạc bộ của bạn." 
                                   FontSize="16" Foreground="Black"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="#3B82F6" CornerRadius="12" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Làm Mới" FontSize="14" FontWeight="Medium" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Modern Stats Cards -->
                    <Grid Grid.Row="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Users Card -->
                        <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="24" Margin="0,0,15,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#EFF6FF" CornerRadius="12" Width="48" Height="48" HorizontalAlignment="Left">
                                    <TextBlock Text="👥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding DashboardViewModel.TotalUsers}" FontSize="36" FontWeight="Bold" 
                                       Foreground="Black" Margin="0,16,0,4"/>
                                <TextBlock Grid.Row="2" Text="Tổng Người Dùng" FontSize="14" FontWeight="Medium" 
                                       Foreground="Black"/>
                            </Grid>
                        </Border>

                        <!-- Total Clubs Card -->
                        <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="24" Margin="7.5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#F0FDF4" CornerRadius="12" Width="48" Height="48" HorizontalAlignment="Left">
                                    <TextBlock Text="🏛️" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding DashboardViewModel.TotalClubs}" FontSize="36" FontWeight="Bold" 
                                       Foreground="Black" Margin="0,16,0,4"/>
                                <TextBlock Grid.Row="2" Text="Tổng Câu Lạc Bộ" FontSize="14" FontWeight="Medium" 
                                       Foreground="Black"/>
                            </Grid>
                        </Border>

                        <!-- Total Events Card -->
                        <Border Grid.Column="2" Background="White" CornerRadius="16" Padding="24" Margin="7.5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FFFBEB" CornerRadius="12" Width="48" Height="48" HorizontalAlignment="Left">
                                    <TextBlock Text="📅" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding DashboardViewModel.TotalEvents}" FontSize="36" FontWeight="Bold" 
                                       Foreground="Black" Margin="0,16,0,4"/>
                                <TextBlock Grid.Row="2" Text="Tổng Sự Kiện" FontSize="14" FontWeight="Medium" 
                                       Foreground="Black"/>
                            </Grid>
                        </Border>

                        <!-- Total Reports Card -->
                        <Border Grid.Column="3" Background="White" CornerRadius="16" Padding="24" Margin="15,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FEF2F2" CornerRadius="12" Width="48" Height="48" HorizontalAlignment="Left">
                                    <TextBlock Text="📈" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding DashboardViewModel.TotalReports}" FontSize="36" FontWeight="Bold" 
                                       Foreground="Black" Margin="0,16,0,4"/>
                                <TextBlock Grid.Row="2" Text="Tổng Báo Cáo" FontSize="14" FontWeight="Medium" 
                                       Foreground="Black"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Modern Recent Activity -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Recent Events -->
                        <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="32" Margin="0,0,15,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                                    <TextBlock Text="Sự Kiện Gần Đây" FontSize="20" FontWeight="Bold" 
                                           Foreground="Black" Margin="0,0,0,4"/>
                                    <TextBlock Text="Các sự kiện mới nhất từ câu lạc bộ của bạn" 
                                           FontSize="14" Foreground="Black"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                    <ItemsControl ItemsSource="{Binding DashboardViewModel.RecentEvents}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F8FAFC" CornerRadius="12" Padding="16" Margin="0,0,0,12">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16" 
                                                               Foreground="Black" Margin="0,0,0,4"/>
                                                        <TextBlock Text="{Binding EventDate, StringFormat='Date: {0:MMM dd, yyyy}'}" 
                                                               FontSize="14" Foreground="Black"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Quick Actions -->
                        <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="32" Margin="15,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                                    <TextBlock Text="Thao Tác Nhanh" FontSize="20" FontWeight="Bold" 
                                           Foreground="Black" Margin="0,0,0,4"/>
                                    <TextBlock Text="Các tác vụ thông thường và phím tắt" 
                                           FontSize="14" Foreground="Black"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1">
                                    <Button Background="#3B82F6" Foreground="White" BorderThickness="0" 
                                        Padding="16,12" Margin="0,0,0,12" 
                                        Command="{Binding DashboardViewModel.CreateEventCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Thêm Sự Kiện Mới" FontSize="14" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Background="#10B981" Foreground="White" BorderThickness="0" 
                                        Padding="16,12" Margin="0,0,0,12" 
                                        Command="{Binding DashboardViewModel.AddMemberCommand}"
                                        Visibility="{Binding CanAccessAdminFeatures, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Quản Lý Người Dùng" FontSize="14" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Background="#8B5CF6" Foreground="White" BorderThickness="0" 
                                        Padding="16,12" 
                                        Command="{Binding DashboardViewModel.GenerateReportCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Tạo Báo Cáo" FontSize="14" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </DataTemplate>

        <!-- Modern Users Template -->
        <DataTemplate x:Key="UsersTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modern Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Quản Lý Người Dùng" FontSize="32" FontWeight="Bold" 
                                   Foreground="Black" Margin="0,0,0,5"/>
                            <TextBlock Text="Quản lý người dùng, vai trò và quyền hạn trong tổ chức của bạn." 
                                   FontSize="16" Foreground="Black"/>
                        </StackPanel>

                        <Button Grid.Column="1" Background="#3B82F6" Foreground="White" BorderThickness="0" 
                            Padding="20,12" FontWeight="Medium">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Thêm Người Dùng" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Modern Controls -->
                    <Grid Grid.Row="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Modern Search -->
                        <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" Margin="0,0,15,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#F1F5F9" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                    <TextBlock Text="🔍" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBox Grid.Column="1" Name="SearchBox" BorderThickness="0" Background="Transparent" 
                                     VerticalAlignment="Center" FontSize="16" 
                                     Foreground="Black" FontWeight="Medium"/>
                            </Grid>
                        </Border>

                        <!-- Modern Filter -->
                        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="16" Margin="7.5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <ComboBox Background="Transparent" BorderThickness="0" FontSize="16" 
                                  Foreground="Black" FontWeight="Medium">
                                <ComboBoxItem Content="Tất Cả Vai Trò"/>
                                <ComboBoxItem Content="Quản Trị Viên"/>
                                <ComboBoxItem Content="Chủ Tịch"/>
                                <ComboBoxItem Content="Phó Chủ Tịch"/>
                                <ComboBoxItem Content="Trưởng Nhóm"/>
                                <ComboBoxItem Content="Thành Viên"/>
                            </ComboBox>
                        </Border>

                        <!-- Export Button -->
                        <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="16" Margin="15,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Xuất" FontSize="16" FontWeight="Medium" Foreground="Black"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Modern Users List -->
                    <Border Grid.Row="2" Background="White" CornerRadius="16" Padding="0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Table Header -->
                            <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="16,16,0,0" Padding="24,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Họ Tên" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="1" Text="Email" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="2" Text="Vai Trò" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="3" Text="Câu Lạc Bộ" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="4" Text="Ngày Tham Gia" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="5" Text="Thao Tác" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Table Content -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,0,24,24">
                                <ItemsControl ItemsSource="{Binding Users}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="0,16" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="150"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding FullName}" FontSize="16" FontWeight="Medium" Foreground="Black"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" Text="{Binding Email}" FontSize="14" Foreground="Black" VerticalAlignment="Center"/>

                                                    <Border Grid.Column="2" Background="#EFF6FF" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Role}" FontSize="12" FontWeight="Medium" Foreground="Black"/>
                                                    </Border>

                                                    <TextBlock Grid.Column="3" Text="{Binding Club.Name}" FontSize="14" Foreground="Black" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="4" Text="{Binding JoinDate, StringFormat='{}{0:MMM dd, yyyy}'}" FontSize="14" Foreground="Black" VerticalAlignment="Center"/>

                                                    <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Button Background="#3B82F6" Foreground="White" BorderThickness="0" 
                                                            Padding="8" Margin="0,0,8,0" ToolTip="Edit">
                                                            <TextBlock Text="✏️" FontSize="12"/>
                                                        </Button>

                                                        <Button Background="#EF4444" Foreground="White" BorderThickness="0" 
                                                            Padding="8" ToolTip="Delete">
                                                            <TextBlock Text="🗑️" FontSize="12"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </DataTemplate>

        <!-- Modern Reports Template -->
        <DataTemplate x:Key="ReportsTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modern Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Báo Cáo &amp; Phân Tích" FontSize="32" FontWeight="Bold" 
                                   Foreground="Black" Margin="0,0,0,5"/>
                            <TextBlock Text="Tạo thông tin chi tiết và theo dõi hiệu suất trong tổ chức của bạn." 
                                   FontSize="16" Foreground="Black"/>
                        </StackPanel>

                        <Button Grid.Column="1" Background="#10B981" Foreground="White" BorderThickness="0" 
                            Padding="20,12" FontWeight="Medium">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Tạo Báo Cáo" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Report Type Cards -->
                    <Grid Grid.Row="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="20" Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <StackPanel>
                                <Border Background="#EFF6FF" CornerRadius="12" Width="48" Height="48" Margin="0,0,0,12">
                                    <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Thành Viên" FontSize="16" FontWeight="Bold" Foreground="Black" Margin="0,0,0,4"/>
                                <TextBlock Text="Phân tích người dùng" FontSize="12" Foreground="Black"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="20" Margin="5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <StackPanel>
                                <Border Background="#FEF3F2" CornerRadius="12" Width="48" Height="48" Margin="0,0,0,12">
                                    <TextBlock Text="📅" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Sự Kiện" FontSize="16" FontWeight="Bold" Foreground="Black" Margin="0,0,0,4"/>
                                <TextBlock Text="Số liệu sự kiện" FontSize="12" Foreground="Black"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="White" CornerRadius="16" Padding="20" Margin="5,0">
                            <Border.Effect>
