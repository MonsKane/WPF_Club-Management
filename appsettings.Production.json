{
  "ConnectionStrings": {},
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Error"
    },
    "File": {
      "Path": "C:/Logs/ClubManagement/app-{Date}.log",
      "MinLevel": "Warning",
      "RetainedFileCountLimit": 90
    }
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "IsEnabled": true,
    "Username": "your sender email username",
    "Password": "your sender email password",
    "FromEmail": "your sender email",
    "FromName": "Club Management System",
    "TimeoutSeconds": 30
  },
  "ApplicationSettings": {
    "Environment": "Production",
    "EnableDetailedLogging": false,
    "EnablePerformanceMetrics": true,
    "MaxFileUploadSize": 10485760
  },
  "DatabaseSettings": {
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "MaxRetryCount": 5,
    "MaxRetryDelay": "00:01:00"
  },
  "BackupSettings": {
    "BackupPath": "C:/Backups/ClubManagement",
    "RetentionDays": 90,
    "AutoBackupEnabled": true,
    "BackupSchedule": "0 1 * * *"
  },
  "SecuritySettings": {
    "SessionSettings": {
      "TimeoutMinutes": 30
    },
    "LockoutSettings": {
      "MaxFailedAttempts": 3,
      "LockoutDurationMinutes": 60
    }
  }
}
